{
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "mcp__web-search-prime__webSearchPrime",
      "mcp__web-reader__webReader",
      "mcp__zread__read_file",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__list_memories",
      "mcp__serena__list_dir",
      "mcp__serena__write_memory",
      "mcp__serena__think_about_collected_information",
      "Bash(netstat:*)",
      "mcp__serena__read_memory",
      "Bash(tasklist:*)",
      "Bash(ps:*)",
      "Bash(wmic:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(findstr:*)",
      "Bash(powershell:*)",
      "Bash(curl:*)",
      "Bash(code:*)",
      "Bash(reg query:*)",
      "Bash(node:*)",
      "Bash(npx playwright:*)",
      "Bash(docker-compose:*)",
      "Bash(docker inspect:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git diff --cached --quiet || git commit -m \"chore: auto-commit by Claude Code\"",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/Stop.js"
          }
        ]
      }
    ]
  }
}
